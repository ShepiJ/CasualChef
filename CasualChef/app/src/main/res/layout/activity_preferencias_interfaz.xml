<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ActivityPreferencias_Interfaz">

    <Button
        android:id="@+id/buttonColorBotones"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text=""
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/colorBotones"
        app:layout_constraintStart_toEndOf="@+id/colorBotones"
        app:layout_constraintTop_toTopOf="@+id/colorBotones" />

    <TextView
        android:id="@+id/colorLetra3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color de letra:"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/colorLetra"
        app:layout_constraintEnd_toStartOf="@+id/colorLetra"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/colorLetra" />

    <TextView
        android:id="@+id/colorBotones4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color de botones:"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/colorBotones"
        app:layout_constraintEnd_toStartOf="@+id/colorBotones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/colorBotones" />

    <TextView
        android:id="@+id/colorBotones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#000000"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/fondocolorReceta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorEtiqueta" />

    <TextView
        android:id="@+id/colorLetra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#000000"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/colorEtiqueta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guardar" />

    <TextView
        android:id="@+id/colorEtiqueta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#000000"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/colorBotones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorLetra" />

    <Button
        android:id="@+id/buttonColorEtiqueta"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text=""
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/colorEtiqueta"
        app:layout_constraintStart_toEndOf="@+id/colorEtiqueta"
        app:layout_constraintTop_toTopOf="@+id/colorEtiqueta" />

    <ImageButton
        android:id="@+id/editColorEtiqueta"
        android:layout_width="45dp"
        android:layout_height="37dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/white"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/colorEtiqueta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/colorEtiqueta"
        app:srcCompat="@drawable/editar"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/fondocolorReceta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#000000"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorBotones" />


    <ImageButton
        android:id="@+id/editColorFondoReceta"
        android:layout_width="45dp"
        android:layout_height="37dp"
        android:backgroundTint="@color/white"

        android:scaleType="fitXY"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/fondocolorReceta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fondocolorReceta"
        app:srcCompat="@drawable/editar"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/buttonColorFondoReceta"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text=""
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/fondocolorReceta"
        app:layout_constraintStart_toEndOf="@+id/fondocolorReceta"
        app:layout_constraintTop_toTopOf="@+id/fondocolorReceta" />

    <ImageButton
        android:id="@+id/info"
        android:layout_width="45dp"
        android:layout_height="37dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/white"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/info"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/editColorLetra"
        android:layout_width="45dp"
        android:layout_height="37dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/white"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/colorLetra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/colorLetra"
        app:srcCompat="@drawable/editar"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/editColorBotones"
        android:layout_width="45dp"
        android:layout_height="37dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/white"

        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/colorBotones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/colorBotones"
        app:srcCompat="@drawable/editar"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/buttonColorLetra"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/colorLetra"
        app:layout_constraintStart_toEndOf="@+id/colorLetra"
        app:layout_constraintTop_toTopOf="@+id/colorLetra" />

    <Button
        android:id="@+id/guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar ConfiguraciÃ³n"
        app:layout_constraintBottom_toTopOf="@+id/colorLetra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cadsaas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color de etiqueta:"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/colorEtiqueta"
        app:layout_constraintEnd_toStartOf="@+id/colorEtiqueta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/colorEtiqueta" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color fondo receta"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/fondocolorReceta"
        app:layout_constraintEnd_toStartOf="@+id/fondocolorReceta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fondocolorReceta" />

    <Button
        android:id="@+id/restablecer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Restablecer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>