<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@color/background_principal"
        tools:context=".OptionsFragment">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la receta"
            android:layout_gravity="center"
            android:textColor="@color/etiqueta"
            android:textSize="15sp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="346dp" />

        <EditText
            android:id="@+id/nombreReceta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text=""
            android:textColor="@color/letra"
            tools:ignore="SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="376dp" />



        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ImagenReceta"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/etiqueta"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="434dp" />

        <ImageView
            android:id="@+id/imagenSeleccion"
            android:layout_width="154dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="onImageClick"
            android:src="@android:drawable/ic_menu_gallery"
            tools:ignore="SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="128dp"
            tools:layout_editor_absoluteY="213dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/background_principal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:text="Ingredientes de la receta"
                android:textColor="@color/etiqueta"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="138dp"
                tools:layout_editor_absoluteY="166dp" />

            <ImageButton
                android:id="@+id/editIngredientes"
                android:layout_width="45dp"
                android:layout_height="37dp"
                android:backgroundTint="@color/background_principal"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="@+id/textView15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView15"
                app:layout_constraintVertical_bias="0.444"
                app:srcCompat="@drawable/editar"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


        </LinearLayout>
        <TextView
            android:id="@+id/ingredientesReceta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text=""
            android:textColor="@color/letra"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="-1dp"
            tools:layout_editor_absoluteY="468dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tags de la receta"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/etiqueta"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="46dp" />


        <EditText
            android:id="@+id/tagsReceta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:hint="Ej: Picante,Postre,Bocadillo,Carne"
            android:text=""
            android:textColor="@color/letra"
            tools:ignore="SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="102dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/background_principal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:text="Descripcion de la receta"
                android:textColor="@color/etiqueta"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="138dp"
                tools:layout_editor_absoluteY="166dp" />

            <ImageButton
                android:id="@+id/editDescripcion"
                android:layout_width="45dp"
                android:layout_height="37dp"
                android:backgroundTint="@color/background_principal"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="@+id/textView15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView15"
                app:layout_constraintVertical_bias="0.444"
                app:srcCompat="@drawable/editar"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </LinearLayout>

        <TextView
            android:id="@+id/descripcionReceta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text=""
            android:textColor="@color/letra"
            tools:ignore="SpeakableTextPresentCheck"
            tools:layout_editor_absoluteY="582dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Condiciones"
            android:textColor="@color/etiqueta"
            android:textSize="15sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="546dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/bool1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="105dp"
                android:layout_weight="1"
                android:text="Diabetica"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/bool2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:layout_weight="1"
                android:text="Sin Gluten"
                tools:ignore="TouchTargetSizeCheck" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/bool3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sin Lactosa"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/bool4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vegetariano"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/bool5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pocas Calorias"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiempo de Preparacion"
            android:textColor="@color/etiqueta"
            android:textSize="15sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="546dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/horas"
                android:layout_marginStart="150dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:maxLength="2"
                android:inputType="number"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/puntitos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/letra"
                android:textSize="30sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_gravity="center"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="546dp" />

            <EditText
                android:id="@+id/minutos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="150dp"
                android:layout_weight="1"
                android:textColor="@color/letra"
                android:maxLength="2"
                android:ems="10"
                android:inputType="number"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dificultad de la receta"
            android:textColor="@color/etiqueta"
            android:textSize="15sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="546dp" />

        <RatingBar
            android:id="@+id/dificultad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginEnd="75dp"
            android:numStars="5"
            tools:ignore="SpeakableTextPresentCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMandar"
                android:background="@color/boton"
                android:backgroundTint="@color/boton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Crear"/>

        </LinearLayout>




    </LinearLayout>
</ScrollView>